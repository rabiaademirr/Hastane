<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.header-content h2 {
    margin-bottom: 5px;
    color: #2c3e50;
}

.header-content p {
    color: #6c757d;
    margin: 0;
}

.search-filter-section {
    display: flex;
    gap: 15px;
    align-items: center;
}

.search-box {
    position: relative;
    flex: 1;
    max-width: 300px;
}

.search-box i {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
}

.search-box input {
    padding-left: 35px;
}

.filter-actions {
    display: flex;
    gap: 10px;
    align-items: center;
}

.filter-actions select {
    min-width: 120px;
}

.clinics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 25px;
}

.clinic-card {
    background: white;
    border: 1px solid #e9ecef;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
}

.clinic-card:hover {
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}

.clinic-header {
    position: relative;
}

.clinic-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.clinic-status {
    position: absolute;
    top: 15px;
    right: 15px;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    color: white;
}

.clinic-status.active {
    background-color: #28a745;
}

.clinic-status.inactive {
    background-color: #dc3545;
}

.clinic-info {
    padding: 20px;
}

.clinic-name {
    font-size: 20px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 10px;
}

.clinic-location,
.clinic-phone {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6c757d;
    font-size: 14px;
    margin-bottom: 8px;
}

.clinic-location i,
.clinic-phone i {
    color: #8e44ad;
    width: 16px;
}

.clinic-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    margin: 20px 0;
    padding: 15px 0;
    border-top: 1px solid #e9ecef;
    border-bottom: 1px solid #e9ecef;
}

.stat {
    text-align: center;
}

.stat-label {
    display: block;
    font-size: 12px;
    color: #6c757d;
    margin-bottom: 5px;
}

.stat-value {
    display: block;
    font-size: 18px;
    font-weight: 600;
    color: #2c3e50;
}

.clinic-departments {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
}

.department-tag {
    padding: 4px 12px;
    background-color: #e3f2fd;
    color: #1976d2;
    border-radius: 15px;
    font-size: 12px;
    font-weight: 500;
}

.department-tag.inactive {
    background-color: #f5f5f5;
    color: #6c757d;
}

.clinic-actions {
    display: flex;
    gap: 8px;
    padding: 0 20px 20px;
}

.clinic-actions .btn {
    flex: 1;
    font-size: 12px;
    padding: 8px 12px;
}

@media (max-width: 768px) {
    .clinics-grid {
        grid-template-columns: 1fr;
    }
    
    .search-filter-section {
        flex-direction: column;
        align-items: stretch;
    }
    
    .filter-actions {
        justify-content: space-between;
    }
    
    .clinic-stats {
        grid-template-columns: repeat(2, 1fr);
    }
}
</style>