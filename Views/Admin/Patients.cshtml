<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.header-content h2 {
    margin-bottom: 5px;
    color: #2c3e50;
}

.header-content p {
    color: #6c757d;
    margin: 0;
}

.search-filter-section {
    display: flex;
    gap: 15px;
    align-items: center;
}

.search-box {
    position: relative;
    flex: 1;
    max-width: 300px;
}

.search-box i {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
}

.search-box input {
    padding-left: 35px;
}

.filter-actions {
    display: flex;
    gap: 10px;
    align-items: center;
}

.filter-actions select {
    min-width: 120px;
}

.patient-info {
    display: flex;
    align-items: center;
    gap: 10px;
}

.patient-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
}

.patient-name {
    font-weight: 600;
    color: #2c3e50;
}

.patient-gender {
    font-size: 12px;
    color: #6c757d;
}

.action-buttons {
    display: flex;
    gap: 5px;
}

.action-buttons .btn {
    padding: 5px 8px;
    font-size: 12px;
}

.table th {
    font-weight: 600;
    color: #495057;
    border-bottom: 2px solid #dee2e6;
}

.table td {
    vertical-align: middle;
}

.badge {
    font-size: 11px;
    padding: 4px 8px;
}
</style>