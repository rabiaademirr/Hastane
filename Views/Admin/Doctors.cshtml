<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.header-content h2 {
    margin-bottom: 5px;
    color: #2c3e50;
}

.header-content p {
    color: #6c757d;
    margin: 0;
}

.search-filter-section {
    display: flex;
    gap: 15px;
    align-items: center;
}

.search-box {
    position: relative;
    flex: 1;
    max-width: 300px;
}

.search-box i {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
}

.search-box input {
    padding-left: 35px;
}

.filter-actions {
    display: flex;
    gap: 10px;
    align-items: center;
}

.filter-actions select {
    min-width: 120px;
}

.doctors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;
}

.doctor-card {
    background: white;
    border: 1px solid #e9ecef;
    border-radius: 12px;
    padding: 20px;
    transition: all 0.3s ease;
    position: relative;
}

.doctor-card:hover {
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}

.doctor-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
}

.doctor-avatar img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
}

.doctor-status {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
}

.doctor-status.active {
    background-color: #d4edda;
    color: #155724;
}

.doctor-status.inactive {
    background-color: #f8d7da;
    color: #721c24;
}

.doctor-info {
    margin-bottom: 20px;
}

.doctor-name {
    font-size: 18px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 5px;
}

.doctor-specialty {
    color: #6c757d;
    font-size: 14px;
    margin-bottom: 5px;
}

.doctor-rate {
    color: #8e44ad;
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 15px;
}

.doctor-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
}

.stat {
    text-align: center;
}

.stat-label {
    display: block;
    font-size: 11px;
    color: #6c757d;
    margin-bottom: 2px;
}

.stat-value {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: #2c3e50;
}

.doctor-actions {
    display: flex;
    gap: 8px;
}

.doctor-actions .btn {
    flex: 1;
    font-size: 12px;
    padding: 8px 12px;
}

@media (max-width: 768px) {
    .doctors-grid {
        grid-template-columns: 1fr;
    }
    
    .search-filter-section {
        flex-direction: column;
        align-items: stretch;
    }
    
    .filter-actions {
        justify-content: space-between;
    }
}
</style>