<style>
/* Dashboard Specific Styles */
.dashboard-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
    height: calc(100vh - 120px);
}

.panel {
    height: 100%;
    overflow-y: auto;
}

/* Calendar Styles */
.calendar-section {
    margin-bottom: 20px;
}

.calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.calendar-nav {
    display: flex;
    gap: 5px;
}

.calendar-grid {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
}

.calendar-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    background-color: #f8f9fa;
    font-weight: 600;
    font-size: 12px;
}

.calendar-weekdays > div {
    padding: 8px;
    text-align: center;
    border-right: 1px solid #e9ecef;
}

.calendar-weekdays > div:last-child {
    border-right: none;
}

.calendar-days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
}

.calendar-day {
    padding: 8px;
    text-align: center;
    border-right: 1px solid #e9ecef;
    border-bottom: 1px solid #e9ecef;
    cursor: pointer;
    transition: all 0.3s ease;
}

.calendar-day:hover {
    background-color: #f8f9fa;
}

.calendar-day.selected {
    background-color: #8e44ad;
    color: white;
}

.calendar-day.unavailable {
    color: #6c757d;
    background-color: #f8f9fa;
}

.calendar-day.sunday {
    color: #dc3545;
}

/* Time Slots Styles */
.time-slots-section {
    margin-bottom: 20px;
}

.time-slots-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
    margin-top: 10px;
}

.time-slot {
    padding: 8px;
    border: 1px solid #ced4da;
    border-radius: 6px;
    background: white;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 12px;
}

.time-slot:hover {
    border-color: #8e44ad;
}

.time-slot.available {
    color: #495057;
}

.time-slot.unavailable {
    color: #6c757d;
    background-color: #f8f9fa;
    cursor: not-allowed;
}

/* Patient Concerns Styles */
.patient-concerns {
    position: relative;
}

.symptoms-section {
    margin-top: 15px;
}

.symptoms-list {
    list-style: none;
    padding-left: 0;
}

.symptoms-list li {
    padding: 5px 0;
    padding-left: 20px;
    position: relative;
}

.symptoms-list li:before {
    content: "•";
    position: absolute;
    left: 0;
    color: #8e44ad;
}

.word-count {
    position: absolute;
    bottom: 5px;
    right: 10px;
    font-size: 12px;
    color: #6c757d;
}

/* Search and Filter Styles */
.search-filter {
    display: flex;
    gap: 10px;
    align-items: center;
}

.search-box {
    position: relative;
    flex: 1;
}

.search-box i {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
}

.search-box input {
    padding-left: 35px;
}

/* Doctor Grid Styles */
.doctor-grid {
    display: grid;
    gap: 15px;
}

.doctor-card {
    display: flex;
    align-items: center;
    padding: 15px;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    background: white;
    transition: all 0.3s ease;
}

.doctor-card:hover {
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.doctor-avatar {
    margin-right: 15px;
}

.doctor-avatar img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
}

.doctor-info {
    flex: 1;
}

.doctor-name {
    font-weight: 600;
    margin-bottom: 5px;
    color: #2c3e50;
}

.doctor-specialty {
    color: #6c757d;
    font-size: 14px;
    margin-bottom: 3px;
}

.doctor-rate {
    color: #8e44ad;
    font-weight: 600;
    font-size: 14px;
}

.doctor-actions {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

/* Doctor Detail Styles */
.doctor-profile {
    text-align: center;
    margin-bottom: 25px;
}

.doctor-avatar-large {
    margin-bottom: 15px;
}

.doctor-avatar-large img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
}

.doctor-name-large {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 5px;
    color: #2c3e50;
}

.doctor-specialty-large {
    color: #6c757d;
    margin-bottom: 5px;
}

.doctor-rate-large {
    color: #8e44ad;
    font-weight: 600;
    font-size: 16px;
}

.section-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
}

.section-header i {
    color: #8e44ad;
}

.speciality-list {
    list-style: none;
    padding-left: 0;
}

.speciality-list li {
    padding: 5px 0;
    padding-left: 20px;
    position: relative;
}

.speciality-list li:before {
    content: "•";
    position: absolute;
    left: 0;
    color: #8e44ad;
}

.reviews-section {
    margin: 25px 0;
}

.review-carousel {
    position: relative;
}

.review-item {
    background-color: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 10px;
}

.stars {
    color: #ffc107;
    margin-bottom: 10px;
}

.review-text {
    font-size: 14px;
    line-height: 1.5;
    color: #495057;
}

.carousel-nav {
    display: flex;
    justify-content: center;
    gap: 10px;
}

.action-buttons {
    display: flex;
    gap: 10px;
    margin-top: 20px;
}

.action-buttons .btn {
    flex: 1;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .dashboard-container {
        grid-template-columns: 1fr 1fr;
    }
    
    .doctor-detail-panel {
        grid-column: 1 / -1;
    }
}

@media (max-width: 768px) {
    .dashboard-container {
        grid-template-columns: 1fr;
    }
    
    .time-slots-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}
</style>

<script>
// Calendar functionality
document.addEventListener('DOMContentLoaded', function() {
    // Generate calendar days
    const calendarDays = document.querySelector('.calendar-days');
    const daysInMonth = 31;
    
    for (let i = 1; i <= daysInMonth; i++) {
        const dayElement = document.createElement('div');
        dayElement.className = 'calendar-day';
        dayElement.textContent = i;
        
        // Mark Sundays
        if (i % 7 === 1) {
            dayElement.classList.add('sunday');
        }
        
        // Mark selected day (4th)
        if (i === 4) {
            dayElement.classList.add('selected');
        }
        
        // Mark unavailable days
        if ([17, 18, 24, 25].includes(i)) {
            dayElement.classList.add('unavailable');
        }
        
        calendarDays.appendChild(dayElement);
    }
    
    // Time slot selection
    const timeSlots = document.querySelectorAll('.time-slot.available');
    timeSlots.forEach(slot => {
        slot.addEventListener('click', function() {
            timeSlots.forEach(s => s.classList.remove('selected'));
            this.classList.add('selected');
        });
    });
    
    // Doctor card selection
    const doctorCards = document.querySelectorAll('.doctor-card');
    doctorCards.forEach(card => {
        card.addEventListener('click', function() {
            doctorCards.forEach(c => c.classList.remove('selected'));
            this.classList.add('selected');
        });
    });
});
</script>