@{
    ViewData["Title"] = "Hospital Appointment System";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Hospital Appointment System</h1>
                <p class="hero-subtitle">Modern healthcare management system for patients, doctors, and administrators</p>
                <div class="hero-actions">
                    <a href="#" class="btn btn-primary btn-lg">Get Started</a>
                    <a href="#" class="btn btn-outline-primary btn-lg">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <img src="https://via.placeholder.com/600x400/8e44ad/ffffff?text=Healthcare+System" alt="Healthcare System" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="user-types-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title text-center">Choose Your Role</h2>
                <p class="section-subtitle text-center">Select your user type to access the appropriate interface</p>
            </div>
        </div>
        
        <div class="row mt-5">
            <!-- Patient Card -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="user-type-card patient-card">
                    <div class="card-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <h3 class="card-title">Patient</h3>
                    <p class="card-description">
                        Book appointments, view your medical history, and communicate with your healthcare providers.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-check"></i> Easy appointment booking</li>
                        <li><i class="fas fa-check"></i> View medical records</li>
                        <li><i class="fas fa-check"></i> Chat with doctors</li>
                        <li><i class="fas fa-check"></i> Receive notifications</li>
                    </ul>
                    <a href="#" class="btn btn-primary btn-block">Access Patient Portal</a>
                </div>
            </div>
            
            <!-- Doctor Card -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="user-type-card doctor-card">
                    <div class="card-icon">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <h3 class="card-title">Doctor</h3>
                    <p class="card-description">
                        Manage your schedule, view patient information, and provide healthcare services efficiently.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-check"></i> Manage appointments</li>
                        <li><i class="fas fa-check"></i> View patient records</li>
                        <li><i class="fas fa-check"></i> Update medical notes</li>
                        <li><i class="fas fa-check"></i> Schedule management</li>
                    </ul>
                    <a href="#" class="btn btn-primary btn-block">Access Doctor Portal</a>
                </div>
            </div>
            
            <!-- Admin Card -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="user-type-card admin-card">
                    <div class="card-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3 class="card-title">Administrator</h3>
                    <p class="card-description">
                        Manage the entire healthcare system, including patients, doctors, appointments, and clinics.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-check"></i> System management</li>
                        <li><i class="fas fa-check"></i> User administration</li>
                        <li><i class="fas fa-check"></i> Clinic management</li>
                        <li><i class="fas fa-check"></i> Analytics & reports</li>
                    </ul>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-primary btn-block">Access Admin Panel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title text-center">System Features</h2>
            </div>
        </div>
        
        <div class="row mt-5">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h4>Appointment Scheduling</h4>
                    <p>Easy and efficient appointment booking system with real-time availability.</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h4>Secure & Private</h4>
                    <p>HIPAA compliant system ensuring patient data security and privacy.</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4>Mobile Friendly</h4>
                    <p>Responsive design that works seamlessly on all devices and screen sizes.</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4>Analytics & Reports</h4>
                    <p>Comprehensive reporting and analytics for better healthcare management.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hero-section {
    background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
    color: white;
    padding: 80px 0;
    margin-bottom: 60px;
}

.hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
}

.hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
}

.hero-actions {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
}

.hero-actions .btn {
    padding: 12px 30px;
    font-weight: 600;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 15px;
}

.section-subtitle {
    font-size: 1.1rem;
    color: #6c757d;
    margin-bottom: 40px;
}

.user-type-card {
    background: white;
    border-radius: 15px;
    padding: 30px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    height: 100%;
    border: 2px solid transparent;
}

.user-type-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}

.patient-card:hover {
    border-color: #3498db;
}

.doctor-card:hover {
    border-color: #e74c3c;
}

.admin-card:hover {
    border-color: #8e44ad;
}

.card-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    font-size: 2rem;
    color: white;
}

.patient-card .card-icon {
    background: linear-gradient(135deg, #3498db, #2980b9);
}

.doctor-card .card-icon {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
}

.admin-card .card-icon {
    background: linear-gradient(135deg, #8e44ad, #7d3c98);
}

.card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 15px;
}

.card-description {
    color: #6c757d;
    margin-bottom: 20px;
    line-height: 1.6;
}

.card-features {
    list-style: none;
    padding: 0;
    margin-bottom: 25px;
    text-align: left;
}

.card-features li {
    padding: 8px 0;
    color: #495057;
    display: flex;
    align-items: center;
    gap: 10px;
}

.card-features i {
    color: #28a745;
    width: 16px;
}

.btn-block {
    width: 100%;
    padding: 12px;
    font-weight: 600;
}

.features-section {
    background-color: #f8f9fa;
    padding: 80px 0;
    margin-top: 60px;
}

.feature-item {
    text-align: center;
    padding: 30px 20px;
}

.feature-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #8e44ad, #9b59b6);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    font-size: 1.5rem;
    color: white;
}

.feature-item h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 15px;
}

.feature-item p {
    color: #6c757d;
    line-height: 1.6;
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-actions {
        flex-direction: column;
    }
    
    .hero-actions .btn {
        width: 100%;
    }
    
    .section-title {
        font-size: 2rem;
    }
}
</style>
