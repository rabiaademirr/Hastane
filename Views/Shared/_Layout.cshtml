<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hastane Randevu Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-hospital"></i>
                    <span>Hospital</span>
                </div>
                <div class="menu-toggle">
                    Menu <i class="fas fa-chevron-right"></i>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <a href="/" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/Patient" class="nav-item">
                    <i class="fas fa-user"></i>
                    <span>Patients</span>
                </a>
                <a href="/Admin" class="nav-item">
                    <i class="fas fa-user-md"></i>
                    <span>Admin</span>
                </a>
                <a href="/Doctor" class="nav-item">
                    <i class="fas fa-stethoscope"></i>
                    <span>Doctors</span>
                </a>
                <a href="/Patient/BookAppointment" class="nav-item">
                    <i class="fas fa-calendar-plus"></i>
                    <span>Book Appointment</span>
                </a>
                <a href="/Patient/MyAppointments" class="nav-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>My Appointments</span>
                </a>
                <a href="/Admin/Appointments" class="nav-item">
                    <i class="fas fa-clipboard-list"></i>
                    <span>All Appointments</span>
                </a>
                <a href="/Admin/Patients" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Manage Patients</span>
                </a>
                <a href="/Admin/Doctors" class="nav-item">
                    <i class="fas fa-user-md"></i>
                    <span>Manage Doctors</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-info-circle"></i>
                    <span>About</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="header-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="header-right">
                    <div class="header-actions">
                        <button class="btn btn-icon">
                            <i class="fas fa-bell"></i>
                        </button>
                        <button class="btn btn-icon">
                            <i class="fas fa-sun"></i>
                        </button>
                        <div class="user-profile">
                            <img src="https://via.placeholder.com/40x40" alt="Profile" class="profile-image">
                            <div class="user-info">
                                <span class="user-name">Admin User</span>
                                <span class="user-email">admin@hospital.com</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
