<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="admin-container">
        <!-- Left Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-asterisk"></i>
                </div>
                <div class="menu-text">Menu</div>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="@Url.Action("Dashboard", "Admin")" class="nav-link">
                            <i class="fas fa-th-large"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Patients", "Admin")" class="nav-link">
                            <i class="fas fa-user"></i>
                            <span>Patients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Doctors", "Admin")" class="nav-link">
                            <i class="fas fa-user-md"></i>
                            <span>Doctors</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Appointments", "Admin")" class="nav-link">
                            <i class="fas fa-calendar"></i>
                            <span>Appointments</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Clinics", "Admin")" class="nav-link">
                            <i class="fas fa-hospital"></i>
                            <span>Clinics</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Top Header -->
            <header class="top-header">
                <div class="header-left">
                    <div class="logo-small">
                        <i class="fas fa-asterisk"></i>
                    </div>
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="header-right">
                    <div class="header-actions">
                        <button class="btn-icon" title="Notifications">
                            <i class="fas fa-bell"></i>
                        </button>
                        <button class="btn-icon" title="Toggle Theme">
                            <i class="fas fa-sun"></i>
                        </button>
                        <div class="user-profile">
                            <div class="user-info">
                                <span class="user-name">Admin User</span>
                                <span class="user-email">admin@hospital.com</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>